# ==================================
# API Configuration
# ==================================
# Laravel Backend API URL (Change this to your Laravel API URL)
VITE_API_BASE_URL=http://localhost:8000/api

# Application Name
VITE_APP_NAME=NetroHub

# Application Environment (development, staging, production)
VITE_APP_ENV=development

# ==================================
# Authentication Configuration
# ==================================
# Token storage key (change in production for security)
VITE_AUTH_TOKEN_KEY=auth_token

# Session timeout in minutes
VITE_SESSION_TIMEOUT=60

# ==================================
# API Configuration
# ==================================
# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# Maximum file upload size in MB
VITE_MAX_FILE_SIZE=5

# Allowed image formats
VITE_ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp

# Allowed document formats
VITE_ALLOWED_DOCUMENT_FORMATS=pdf,doc,docx

# ==================================
# Feature Flags
# ==================================
# Enable/disable features
VITE_ENABLE_SOCIAL_LOGIN=false
VITE_ENABLE_PHONE_VERIFICATION=true
VITE_ENABLE_KYC=true
VITE_ENABLE_DISPUTES=true
VITE_ENABLE_WISHLIST=true
VITE_ENABLE_CART=true
VITE_ENABLE_REVIEWS=true

# ==================================
# UI Configuration
# ==================================
# Items per page for pagination
VITE_PRODUCTS_PER_PAGE=12
VITE_ORDERS_PER_PAGE=10
VITE_DISPUTES_PER_PAGE=10

# Default language (en, ar)
VITE_DEFAULT_LANGUAGE=en

# Enable RTL by default
VITE_DEFAULT_RTL=false

# DataBase
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=nxoland
DB_USERNAME=root
DB_PASSWORD=

# ==================================
# Payment Configuration
# ==================================
# Payment gateway (stripe, paypal, razorpay, etc.)
VITE_PAYMENT_GATEWAY=stripe

# Currency
VITE_CURRENCY=USD
VITE_CURRENCY_SYMBOL=$

# Service fee percentage
VITE_SERVICE_FEE_PERCENTAGE=5

# ==================================
# Social Media Links
# ==================================
# VITE_SOCIAL_FACEBOOK=https://facebook.com/netrohub
# VITE_SOCIAL_TWITTER=https://twitter.com/netrohub
# VITE_SOCIAL_INSTAGRAM=https://instagram.com/netrohub
# VITE_SOCIAL_DISCORD=https://discord.gg/netrohub
# VITE_SOCIAL_TELEGRAM=https://t.me/netrohub

# ==================================
# Support Configuration
# ==================================
VITE_SUPPORT_EMAIL=support@netrohub.com
VITE_SUPPORT_PHONE=+1234567890
VITE_SUPPORT_WHATSAPP=+1234567890

# ==================================
# SEO & Analytics
# ==================================
# Google Analytics ID
VITE_GA_TRACKING_ID=

# Facebook Pixel ID
VITE_FB_PIXEL_ID=

# Site URL (for SEO)
VITE_SITE_URL=http://localhost:8080

# ==================================
# CDN & Assets
# ==================================
# CDN URL for static assets (leave empty to use local)
VITE_CDN_URL=

# Default product image placeholder
VITE_DEFAULT_PRODUCT_IMAGE=/placeholder.svg

# Default user avatar
VITE_DEFAULT_USER_AVATAR=/avatar-placeholder.svg

# ==================================
# Development Tools
# ==================================
# Enable React Query DevTools
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Enable verbose logging
VITE_ENABLE_DEBUG_LOGS=true

# Mock API calls (useful for development without backend)

# ==================================
# Security
# ==================================
# CAPTCHA Configuration (optional)
VITE_ENABLE_CAPTCHA=false
VITE_RECAPTCHA_SITE_KEY=

# Rate limiting (requests per minute)
VITE_RATE_LIMIT=60

# ==================================
# Notifications
# ==================================
# Toast notification duration in milliseconds
VITE_TOAST_DURATION=3000

# Enable desktop notifications
VITE_ENABLE_DESKTOP_NOTIFICATIONS=false

# ==================================
# Cache Configuration
# ==================================
# Cache duration in milliseconds
VITE_CACHE_DURATION=300000

# Stale time for queries in milliseconds
VITE_QUERY_STALE_TIME=60000

# ==================================
# Seller Configuration
# ==================================
# Minimum seller rating required
VITE_MIN_SELLER_RATING=3.0

# Maximum products per seller (Free plan)
VITE_MAX_PRODUCTS_FREE=3

# Transaction fee percentage by plan
VITE_FEE_FREE=5
VITE_FEE_PRO=3
VITE_FEE_ELITE=1.5

# ==================================
# Dispute Configuration
# ==================================
# Dispute response time in hours
VITE_DISPUTE_RESPONSE_TIME=48

# Dispute auto-close time in days
VITE_DISPUTE_AUTO_CLOSE_DAYS=30

# ==================================
# Product Configuration
# ==================================
# Maximum images per product
VITE_MAX_PRODUCT_IMAGES=6

# Minimum product price
VITE_MIN_PRODUCT_PRICE=1

# Maximum product price
VITE_MAX_PRODUCT_PRICE=10000

# ==================================
# Categories
# ==================================
# Available product categories (comma-separated)
VITE_PRODUCT_CATEGORIES=Social Media,Gaming,Digital Services,Software,Entertainment

# ==================================
# Email Configuration (for contact forms)
# ==================================
VITE_CONTACT_EMAIL=contact@netrohub.com

# ==================================
# Legal
# ==================================
VITE_COMPANY_NAME=NetroHub
VITE_COMPANY_ADDRESS=123 Digital Street, Tech City, TC 12345
VITE_PRIVACY_POLICY_URL=/privacy
VITE_TERMS_OF_SERVICE_URL=/terms
VITE_REFUND_POLICY_URL=/refund-policy

# ==================================
# API Endpoints Override (Optional)
# ==================================
# Override specific endpoints if needed
# VITE_AUTH_LOGIN_ENDPOINT=/api/auth/login
# VITE_AUTH_REGISTER_ENDPOINT=/api/auth/register
# VITE_PRODUCTS_ENDPOINT=/api/products

# ==================================
# Development URLs (for different environments)
# ==================================
# Development API
# VITE_API_BASE_URL=http://localhost:8000/api

# Staging API
# VITE_API_BASE_URL=https://staging-api.netrohub.com/api

# Production API
# VITE_API_BASE_URL=https://api.netrohub.com/api
# ==================================
# Cloudflare Turnstile Configuration
# ==================================
# Get your site key from: https://dash.cloudflare.com/?to=/:account/turnstile
VITE_TURNSTILE_SITE_KEY=0x4AAAAAAB7dFU6VMLmS-CiV
VITE_ENABLE_TURNSTILE=false

# Turnstile theme (light, dark, auto)
VITE_TURNSTILE_THEME=dark

# Turnstile size (normal, compact)
VITE_TURNSTILE_SIZE=normal

# ==================================
# Analytics Configuration
# ==================================
# Google Analytics Measurement ID
VITE_GA_TRACKING_ID=G-23N0Q9P0S9
VITE_ENABLE_ANALYTICS=true

# ==================================
# Mock API Mode (Test without backend)
# ==================================
# Enable this to test the website without Laravel/MySQL
VITE_MOCK_API=true
